{
    "swagger": "2.0",
    "info": {
      "title": "Audiobook Store API",
      "description": "API for managing and retrieving audiobooks.",
      "version": "1.0.0"
    },
    "host": "localhost:5000",
    "basePath": "/",
    "schemes": ["http"],
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header",
        "description": "JWT Authorization header using the Bearer scheme. Example: 'Bearer {token}'"
      }
    },
    "paths": {
      "/auth/register": {
      "post": {
          "tags": [
              "auth"
          ],
          "summary": "Create new user",
          "description": "Creates new user with given data.",
          "parameters": [
              {
                  "in": "body",
                  "name": "body",
                  "description": "User information to create new user",
                  "required": true,
                  "schema": {
                      "$ref": "#/definitions/User"
                  }
              }
          ],
          "responses": {
              "201": {
                  "description": "User was successfully created"
              }
          }
      }
  },
  "/auth/token": {
    "post": {
      "tags": ["auth"],
      "summary": "User login",
      "description": "Endpoint for user authentication.",
      "consumes": ["application/x-www-form-urlencoded"],
      "parameters": [
        {
          "name": "username",
          "in": "formData",
          "required": true,
          "type": "string"
        },
        {
          "name": "password",
          "in": "formData",
          "required": true,
          "type": "string",
          "format": "password"
        }
      ],
      "responses": {
        "200": {
          "description": "Login successful",
          "schema": {
            "$ref": "#/definitions/Token"
          }
        },
        "401": {
          "description": "Invalid username or password"
        }
      }
    }
  },
  
      "/audiobook/": {
        "get": {
          "tags": [
            "audiobook"
          ],
          "summary": "List all audiobooks",
          "description": "Retrieve a list of all audiobooks available in the store.",
          "responses": {
            "200": {
              "description": "A list of audiobooks",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Audiobook"
                }
              }
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        },
        "post": {
          "tags": [
            "audiobook"
          ],
          "summary": "Add a new audiobook",
          "description": "Add a new audiobook to the store.",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Audiobook object that needs to be added to the store",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Audiobook"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Audiobook created"
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      },
      "/audiobook/{audiobookId}": {
        "delete": {
          "tags": [
            "audiobook"
          ],
          "summary": "Delete an audiobook",
          "description": "Deletes the audiobook with the specified ID",
          "operationId": "deleteAudiobook",
          "produces": [
            "application/json"
          ],
          "parameters": [
            {
              "name": "audiobookId",
              "in": "path",
              "description": "ID of the audiobook to delete",
              "required": true,
              "type": "integer",
              "format": "int64"
            }
          ],
          "responses": {
            "200": {
              "description": "Audiobook deleted successfully"
            },
            "404": {
              "description": "Audiobook not found"
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      },
      "/category/": {
        "get": {
          "tags": [
            "category"
          ],
          "summary": "List all categories",
          "description": "Retrieve a list of all categories for audiobooks.",
          "responses": {
            "200": {
              "description": "An array of categories",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Category"
                }
              }
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        },
        "post": {
          "tags": [
            "category"
          ],
          "summary": "Add a new category",
          "description": "Create a new category for audiobooks.",
          "parameters": [
            {
              "in": "body",
              "name": "body",
              "description": "Category object that needs to be added",
              "required": true,
              "schema": {
                "$ref": "#/definitions/Category"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Category created"
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        }
      },
      "/category/{categoryId}": {
        "delete": {
          "tags": [
            "category"
          ],
          "summary": "Delete a category",
          "description": "Deletes a category with the specified ID.",
          "parameters": [
            {
              "name": "categoryId",
              "in": "path",
              "required": true,
              "type": "integer",
              "format": "int64",
              "description": "ID of the category to delete"
            }
          ],
          "responses": {
            "200": {
              "description": "Category deleted"
            },
            "404": {
              "description": "Category not found"
            }
          },
          "security": [
            {
              "Bearer": []
            }
          ]
        },
        "put": {
          "tags": ["category"],
        "summary": "Update an existing category",
        "description": "Updates a category with the given ID.",
        "operationId": "updateCategory",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "categoryId",
            "in": "path",
            "description": "ID of the category to update",
            "required": true,
            "type": "integer",
            "format": "int64"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Category object that needs to be updated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Category"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Category updated successfully",
            "schema": {
              "$ref": "#/definitions/ApiResponse"
            }
          },
          "400": {
            "description": "Invalid input"
          },
          "404": {
            "description": "Category not found"
          }
        },
        "security": [
          {
            "Bearer": []
          }
        ]
        }
      }  
    },
    "definitions": {
      "Token": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
            "id": {
              "type": "integer",
              "format": "int64",
              "readOnly": true
            },
            "username": {
                "type": "string"
            },
            "email": {
                "type": "string"
            },
            "password": {
                "type": "string"
            },
            "role": {
                "type": "string"
            }
        }
    },
      "Audiobook": {
        "type": "object",
        "required": ["title", "description", "category_id"],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "title": {
            "type": "string",
            "example": "The Great Gatsby"
          },
          "description": {
            "type": "string",
            "example": "A novel written by F. Scott Fitzgerald."
          },
          "category_id": {
            "type": "integer",
            "format": "int64",
            "example": 1
          }
        }
      },
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "readOnly": true
          },
          "category_name": {
            "type": "string",
            "example": "Science Fiction"
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "id": {
            "type": "integer",
            "format": "int64"
          }
        }
      }
  }
}
  